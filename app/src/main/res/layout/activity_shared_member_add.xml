        android:id="@+id/submit"
        style="@style/Button.Normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/phone_button_height"
        android:layout_marginEnd="@dimen/ty_common_margin"
        android:layout_marginLeft="@dimen/ty_common_margin"
        android:layout_marginRight="@dimen/ty_common_margin"
